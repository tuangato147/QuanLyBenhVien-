<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ Sơ Y Tế"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Thông tin cá nhân -->
        <TextView android:text="👤 Thông tin cá nhân"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên: Nguyễn Thị A" />

        <TextView android:id="@+id/tvGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính: Nữ" />

        <TextView android:id="@+id/tvBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: 06/12/2003" />

        <TextView android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: 123 Đường ABC, TP.HCM" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="12dp" />

        <!-- Liên hệ -->
        <TextView android:text="📞 Thông tin liên hệ"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SĐT: 0912345678" />

        <TextView android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: nguyentha@gmail.com" />

        <TextView android:id="@+id/tvEmergencyContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người thân liên hệ: Trần Văn B - 0909876543" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="12dp" />

        <!-- Bệnh lý -->
        <TextView android:text=" Tiền sử bệnh lý"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvChronicDiseases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bệnh mãn tính: Tiểu đường" />

        <TextView android:id="@+id/tvAllergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dị ứng: Không" />

        <TextView android:id="@+id/tvSurgeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phẫu thuật trước đây: Cắt ruột thừa (2021)" />

    </LinearLayout>
</ScrollView>
